#!/bin/bash
# mkdoc.sh: makes epydoc

EXCLUDES="viejos|otros|old|others|draft"
EXCLUDES=${EXCLUDES}"|libadaptationlayer|libfsm|libmanagement|libtimer"
echo $EXCLUDES
exit


if [ ! "$1" ]
then
  echo "Usage: mkdoc.sh <project name>"
else
  PRJNM="$1"
  if [ -d "html" ]
  then
    rm -r html/*
  else 
    mkdir html
  fi
  epydoc -v -n $PRJNM --exclude=$EXCLUDES .
fi
